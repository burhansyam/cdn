    if (!empty($history)) {
        foreach (array_slice($history, 0, 10) as $item) {
            echo '<div class="history-item"><div>' . htmlspecialchars($item['keyword']) . '</div><div class="timestamp">' . htmlspecialchars($item['timestamp']) . '</div></div>';
